<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.peterchen.pets.ui.game.GameSurface
        android:id="@+id/game_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/up_panel"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/level"
            android:text="1级"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:text="小萌"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/darkorange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/function"
            android:layout_alignParentRight="true"
            android:text="功能"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_side_panel"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/up_panel"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/status"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="状态" />

        <Button
            android:id="@+id/shop"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_below="@id/status"
            android:text="商店" />

        <Button
            android:id="@+id/storage"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_below="@id/shop"
            android:text="仓库" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_side_panel"
        android:layout_width="wrap_content"
        android:layout_below="@id/up_panel"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chat"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="聊天" />

        <Button
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_below="@id/chat"
            android:text="搜索" />

        <Button
            android:id="@+id/change"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_below="@id/search"
            android:text="宠物" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="吃饭" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="学习" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="打工" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="处理" />
    </LinearLayout>
</RelativeLayout>
